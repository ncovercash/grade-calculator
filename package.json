	"bugs": {
		"url": "https://github.com/ncovercash/grade-calculator/issues"
	},
	"homepage": "https://ncovercash.dev/Projects/Grade-Calculator",
	"dependencies": {
		"@shopify/draggable": "^1.0.0-beta.12",
		"@tailwindcss/forms": "^0.5.0",
		"@tailwindcss/typography": "^0.5.0",
		"autoprefixer": "^10.3.6",
		"dayjs": "^1.10.7",
		"debug": "^4.3.2",
		"escape-html": "^1.0.3",
		"numeral": "^2.0.6",
		"store2": "^2.12.0",
		"stream-browserify": "^3.0.0",
		"tailwindcss": "^3.0.0",
		"when-dom-ready": "^1.2.12"
	},
	"devDependencies": {
		"@babel/core": "7.17.10",
		"@babel/plugin-proposal-class-properties": "7.16.7",
		"@babel/preset-env": "7.17.10",
		"@babel/preset-typescript": "7.16.7",
		"@babel/runtime-corejs3": "7.17.9",
		"@types/debug": "4.1.7",
		"@types/escape-html": "1.0.2",
		"@types/numeral": "2.0.2",
		"@types/when-dom-ready": "1.2.0",
		"@typescript-eslint/eslint-plugin": "5.22.0",
		"@typescript-eslint/parser": "5.22.0",
		"babel-loader": "8.2.5",
		"buffer": "6.0.3",
		"clean-webpack-plugin": "4.0.0",
		"core-js": "3.22.4",
		"crypto-browserify": "3.12.0",
		"css-loader": "6.7.1",
		"cssnano": "5.1.7",
		"eslint": "8.14.0",
		"fibers": "5.0.1",
		"file-loader": "6.2.0",
		"globby": "13.1.1",
		"husky": "7.0.4",
		"lint-staged": "12.4.1",
		"mini-css-extract-plugin": "2.6.0",
		"postcss": "8.4.13",
		"postcss-import": "14.1.0",
		"postcss-loader": "6.2.1",
		"postcss-nested": "5.0.6",
		"postcss-preset-env": "7.4.4",
		"prettier": "2.6.2",
		"prettier-plugin-organize-imports": "2.3.4",
		"purgecss": "4.1.3",
		"purgecss-webpack-plugin": "4.1.3",
		"source-map-loader": "3.0.1",
		"ts-loader": "9.3.0",
		"url-loader": "4.1.1",
		"webpack": "5.72.0",
		"webpack-cli": "4.9.2",
		"webpack-merge": "5.8.0",
		"webpack-notifier": "1.15.0"
	},
	"scripts": {
		"build": "NODE_ENV=production webpack --progress --config webpack.prod.js",
		"build-dev": "NODE_ENV=development webpack -w --progress --config webpack.dev.js",
		"pretty": "npm run pretty-js && npm run pretty-json && npm run pretty-css && npm run pretty-html",
		"pretty-css": "prettier --write 'src/css/**/*.pcss'",
		"pretty-json": "prettier --write '*.json'",
		"pretty-js": "prettier --write 'src/js/**/*.{js,ts,json}' *.js",
		"pretty-html": "prettier --write 'www/**/*.html'",
		"lint": "npm run lint-js",
		"lint-js": "npx eslint src/js/**/*.ts *.js",
		"prepare": "husky install && npm run build"
	},
	"lint-staged": {
		"src/js/**/*.{js,ts}": [
			"prettier --write",
			"eslint"
		],
		"src/css/**/*.pcss": [
			"prettier --write"
		],
		"*.{json}": [
			"prettier --write"
		]
	}
}
